# fzf
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# aliases
[ -f ~/aliases.zsh ] && source ~/aliases.zsh


{{ if eq .chezmoi.os "darwin" }}
# zsh-autosuggestions
source "$(brew --prefix)/share/zsh-autosuggestions/zsh-autosuggestions.zsh"

# zsh-syntax-highlighting
source "$(brew --prefix)/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh"
{{ else }}
# zsh-autosuggestions
source "$HOME/.zsh/plugins/zsh-autosuggestions/zsh-autosuggestions.zsh"

# zsh-syntax-highlighting
source "$HOME/.zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh"
{{ end }}

# zsh-autosuggestions (styles)
ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE='fg=#808080'

# zsh-syntax-highlighting (styles)
ZSH_HIGHLIGHT_STYLES[command]='fg=blue'
ZSH_HIGHLIGHT_STYLES[alias]='fg=blue'
ZSH_HIGHLIGHT_STYLES[builtin]='fg=blue'
ZSH_HIGHLIGHT_STYLES[function]='fg=blue'
ZSH_HIGHLIGHT_STYLES[unknown-token]='fg=red'
ZSH_HIGHLIGHT_STYLES[path]='fg=yellow'
ZSH_HIGHLIGHT_STYLES[comment]='fg=#b1acde'

# zoxide
(( $+commands[zoxide] )) && eval "$(zoxide init zsh)"

# nvim
export EDITOR=nvim
export VISUAL=nvim

# zsh shortcuts
beginning-of-buffer() { CURSOR=0; }
zle -N beginning-of-buffer
end-of-buffer() { CURSOR=${#BUFFER}; }
zle -N end-of-buffer
kill-whole-buffer(){ CUTBUFFER=$BUFFER; BUFFER=; CURSOR=0; }
zle -N kill-whole-buffer

bindkey '^[[1;3A' beginning-of-buffer
bindkey '^[[1;3B' end-of-buffer
bindkey '^[[1;3D' beginning-of-line
bindkey '^[[1;3C' end-of-line
bindkey '^[h' beginning-of-line
bindkey '^[l' end-of-line
bindkey '^[k' beginning-of-buffer
bindkey '^[j' end-of-buffer
bindkey '^[d' kill-whole-buffer


# starship
(( $+commands[starship] )) && eval "$(starship init zsh)"
